<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hotel.model.Room">
	<insert id="insertRoom">
		insert into rooms values(room_seq.nextval,#{type},#{price},#{hname},#{person},#{breakfast},#{stock})
	</insert>
	
	
	<select id="getRoomList" resultType="MyRoom">
		select r_type, r_person, r_price, r_breakfast, r_stock
		from rooms where hname=#{h_name}
	</select>
	
	
	
</mapper>